<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/layoutEdit2">

    <TextView
        android:text="@string/edit_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txtEditSchedule"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editSFName"
        android:hint="@string/first_name"
        android:layout_below="@+id/txtEditSchedule"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:layout_toStartOf="@+id/spinTime2">
    <requestFocus/>
    </EditText>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editSLName"
        android:hint="@string/last_name"
        android:layout_alignBaseline="@+id/editSFName"
        android:layout_alignBottom="@+id/editSFName"
        android:layout_alignStart="@+id/btnSubmit"
        android:layout_marginStart="32dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinDay2"
        android:spinnerMode="dialog"
        android:layout_below="@+id/editSFName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinTime2"
        android:spinnerMode="dialog"
        android:layout_alignBaseline="@+id/spinDay2"
        android:layout_alignBottom="@+id/spinDay2"
        android:layout_toEndOf="@+id/btnSubmit"
        android:layout_alignStart="@+id/editSLName" />

    <Button
        android:text="@string/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/btnSubmit"
        android:layout_below="@+id/spinTime2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>